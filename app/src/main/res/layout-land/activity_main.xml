<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical"
        android:background="@color/gray"
>
    <EditText
            android:id="@+id/editShowNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gray"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:paddingTop="10pt"
            android:textColor="@color/white"
            android:textSize="40sp"
             />

    <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">



        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu7"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="7"
                    android:textSize="18sp" />

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu8"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="8"
                    android:textSize="18sp" />

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu9"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="9"
                    android:textSize="18sp" />
            <Button
                    android:id="@+id/buDiv"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="buOpEvent"
                    android:text="/"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginRight="1pt"/>


            <Button
                    android:id="@+id/button10"
                    android:layout_width="30pt"
                    android:layout_height="25pt"

                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buCleanEvent"
                    android:text="AC"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu4"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="4"
                    android:textSize="18sp" />

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu5"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="5"
                    android:textSize="18sp" />

            <Button

                    android:id="@+id/bu6"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="6"
                    android:textSize="18sp"
                    android:layout_marginRight="1pt"/>
            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/buMul"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="buOpEvent"
                    android:text="*"
                    android:textColor="@color/white"
                    android:textSize="18sp" />


            <Button

                    android:id="@+id/buplusminus"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="+/-"
                    android:textSize="18sp" />
        </TableRow>

        <TableRow
                android:layout_marginBottom="1pt"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu1"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="1"
                    android:textSize="18sp" />

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu2"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="2"
                    android:textSize="18sp" />

            <Button
                    android:layout_marginRight="1pt"
                    android:id="@+id/bu3"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buNumberEvent"
                    android:text="3"
                    android:textSize="18sp" />
            <Button
                    android:id="@+id/buSub"
                    android:layout_width="30pt"
                    android:layout_height="25pt"
                    android:layout_weight="1"
                    android:background="@color/buop"
                    android:onClick="buOpEvent"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_marginRight="1pt"/>


            <Button
                    android:id="@+id/button8"
                    android:layout_width="30pt"
                    android:layout_height="25pt"

                    android:layout_weight="1"
                    android:background="@color/whiteback"
                    android:onClick="buPersentEvent"
                    android:text="%"
                    android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:layout_marginRight="1pt"
                android:id="@+id/bu0"
                android:layout_width="61pt"
                android:layout_height="25pt"
                android:layout_weight="2"
                android:background="@color/whiteback"

                android:onClick="buNumberEvent"
                android:text="0"
                android:textSize="18sp" />

        <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buDot"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/whiteback"

                android:onClick="buNumberEvent"
                android:text="."
                android:textSize="18sp" />
        <Button
                android:layout_marginRight="1pt"
                android:id="@+id/buSum"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/buop"
                android:onClick="buOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />

        <Button
                android:id="@+id/button1"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:background="@color/whiteback"

                android:onClick="buEqualEvent"
                android:text="="

                android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>